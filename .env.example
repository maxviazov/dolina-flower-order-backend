# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8081
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dolina_flowers
DB_USER=postgres
DB_PASSWORD=your_password_here
